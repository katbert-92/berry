{
	"version": "2.0.0",
	"windows": {
		"options": {
			"shell": {
				"executable": "cmd.exe",
				"args": [
					"/C", "sh"
				]
			}
		}
	},
	"problemMatcher": "$gcc",
	"tasks": [
		{
			"label": "🟣 | Clear",
			"type": "shell",
			"command": "find . -type f \\( -name '*.o' -o -name '*.d' \\) -delete",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "❌ | Clean",
			"type": "shell",
			"command": "make",
			"args": ["clean"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "🟢 | Build (debug)",
			"type": "shell",
			"command": "make",
			"args": ["debug"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
